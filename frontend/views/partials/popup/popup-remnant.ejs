    <div>
        <div>
            <form id="searchZonesForm">
                <input type="text" id="searchZones">
                <button>
                    <i class="fa-solid fa-magnifying-glass"></i>
                </button>
            </form>
        </div>
        <div>
            <button id='closeZonesPopup'>x</button>
        </div>
    </div>
    <div id="zones"></div>
